<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    @Html.ActionLink("DevWork", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Get Started
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">@Html.ActionLink("Employers", "Index", "Employers", null, new { @class = "dropdown-item" })</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Freelancers", "Index", "Freelancers", null, new { @class = "dropdown-item" })</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Job Posts", "Index", "JobPosts", null, new { @class = "dropdown-item" })</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Messages", "Index", "Messages", null, new { @class = "dropdown-item" })</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Coding Languages", "Index", "CodingLanguages", null, new { @class = "dropdown-item" })</a>
                    </div>
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DevWork</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
